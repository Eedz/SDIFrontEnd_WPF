<UserControl x:Class="SDIFrontEnd_WPF.SurveyBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDIFrontEnd_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <local:HtmlToFlowDocumentConverter x:Key="HtmlToFlow" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
            ItemsSource="{Binding QuestionList}"
            SelectedItem="{Binding SelectedQuestion}"
            ScrollViewer.VerticalScrollBarVisibility="Visible" >
        
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <TextBlock Text="{Binding Qnum}" Width="40"/>
                        <TextBlock Text="{Binding VarName}" Width="100" Margin="10,0"/>
                        <TextBlock Text="{Binding VarName.VarLabel}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center">
                <Run Text="{Binding SelectedQuestion.VarName.VarName}" d:Text="VarName" />
                <Run Text="--- Q#"/>
                <Run Text="{Binding SelectedQuestion.Qnum}" d:Text="Qnum" />
            </TextBlock>
                
            <FlowDocumentScrollViewer IsToolBarVisible="False" BorderBrush="LightGray" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10" >
                <FlowDocumentScrollViewer.Document>
                    <Binding Path="CurrentQuestionText" Converter="{StaticResource HtmlToFlow}" />
                </FlowDocumentScrollViewer.Document>
            </FlowDocumentScrollViewer>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"></ColumnDefinition>
                    <ColumnDefinition Width="275"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Text="VarLabel:" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Margin="0,0,0,10" FontSize="14" />
                <TextBox Grid.Column="1" Grid.Row="0" Width="275" Text="{Binding SelectedQuestion.VarName.VarLabel}" />

                <TextBlock Text="Topic:" Grid.Column="0" Grid.Row="1" Margin="0,0,0,10" FontSize="14" FontWeight="Bold"/>
                <ComboBox Grid.Column="1" Grid.Row="1" Width="275" ItemsSource="{Binding TopicLabels}" SelectedItem="{Binding SelectedQuestion.VarName.Topic}" DisplayMemberPath="LabelText"/>

                <TextBlock Text="Content:" Grid.Column="0" Grid.Row="2" Margin="0,0,0,10" FontSize="14" FontWeight="Bold"/>
                <ComboBox Grid.Column="1" Grid.Row="2" Width="275" ItemsSource="{Binding ContentLabels}" SelectedItem="{Binding SelectedQuestion.VarName.Content}" DisplayMemberPath="LabelText"/>

                <TextBlock Text="Domain:" Grid.Column="0" Grid.Row="3" Margin="0,0,0,10" FontSize="14" FontWeight="Bold"/>
                <ComboBox Grid.Column="1" Grid.Row="3" ItemsSource="{Binding DomainLabels}" SelectedItem="{Binding SelectedQuestion.VarName.Domain}" DisplayMemberPath="LabelText"/>

                <TextBlock Text="Product:" Grid.Column="0" Grid.Row="4" Margin="0,0,0,10" FontSize="14" FontWeight="Bold"/>
                <ComboBox Grid.Column="1" Grid.Row="4" ItemsSource="{Binding ProductLabels}" SelectedItem="{Binding SelectedQuestion.VarName.Product}" DisplayMemberPath="LabelText"/>

            </Grid>

        </StackPanel>
    </Grid>
</UserControl>
